<UserControl x:Class="SolidworksWPFDemo.Pages.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <Grid Style="{StaticResource ContentRoot}">
                <mui:ModernTab Layout="List" SelectedSource="/Pages/UI/Load.xaml">
                    <mui:ModernTab.Links>
                        <mui:Link DisplayName="Create New Board" Source="/Pages/UI/Load.xaml" />
                        <mui:Link DisplayName="Add component" Source="/Pages/UI/Main.xaml" />
                        <mui:Link DisplayName="View" Source="/Pages/UI/Appearance.xaml" />
                        <mui:Link DisplayName="About" Source="/Pages/UI/About.xaml" />
                    </mui:ModernTab.Links>
                </mui:ModernTab>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
